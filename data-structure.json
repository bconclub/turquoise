    "confidence": "number 0-1 - how confident parser is",
    "warnings": ["array of warnings for user to review"],
    
    "package": {
      "title": "REQUIRED - extracted from document",
      "slug": "AUTO-GENERATED from title + duration",
      "subtitle": "OPTIONAL - manual input if not found",
      "description": "OPTIONAL - manual input if not found",
      
      "nights": "REQUIRED - extracted from duration",
      "days": "REQUIRED - extracted from duration",
      "duration_display": "AUTO-GENERATED - 'X Days / Y Nights'",
      
      "destination_id": "REQUIRED - user must select from dropdown",
      "cities_covered": "EXTRACTED from itinerary routes",
      
      "stay_breakdown": "CALCULATED from overnight values",
      
      "travel_styles": "DETECTED or manual selection",
      "themes": "DETECTED or manual selection",
      "difficulty": "DEFAULT 'easy'",
      "pace": "DEFAULT 'moderate'",
      
      "highlights": "EXTRACTED if section exists, else manual",
      
      "includes": "EXTRACTED from 'Includes' section",
