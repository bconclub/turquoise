  "VALIDATION_RULES": {
    "_description": "What must be present before saving to database",
    "required_for_save": [
      "title",
      "nights",
      "days",
      "destination_id",
      "hero_image",
      "thumbnail",
      "itinerary (at least 1 day)"
    ],
    "auto_generated": [
      "slug (from title + duration)",
      "duration_display (from nights + days)",
      "cities_covered (from itinerary)",
      "stay_breakdown (from overnight values)",
      "is_domestic (from destination)"
    ],
    "manual_if_missing": [
      "subtitle",
      "description", 
      "highlights",
      "travel_styles",
      "best_months",
      "season_note"
    ]
  },

  "DURATION_FORMAT": {
    "_description": "Always format duration as 'X Days / Y Nights'",
    "pattern": "{days} Days / {nights} Nights",
    "examples": [
      { "input": "9N/10D", "output": "10 Days / 9 Nights" },
      { "input": "4 Nights / 5 Days", "output": "5 Days / 4 Nights" },
      { "input": "7 Days 6 Nights", "output": "7 Days / 6 Nights" }
    ]
  },

  "KEY_EXPERIENCES_FILTER": {
    "_description": "How to filter activities for Key Experiences display in modal",
    "include_types": ["cultural", "sightseeing", "adventure", "shopping", "wildlife", "beach"],
    "exclude_types": ["transfer", "leisure"],
    "exclude_names": ["airport", "transfer", "check-in", "check-out", "breakfast", "lunch", "dinner", "overnight"]
  }
