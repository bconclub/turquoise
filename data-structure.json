      "arrival_point": "EXTRACTED from Day 1",
      "departure_point": "EXTRACTED from last day",
      "internal_transport": "DETECTED from content",
      
      "best_months": "MANUAL input",
      "season_note": "MANUAL input",
      
      "hero_image": "REQUIRED - user must select via picker",
      "thumbnail": "REQUIRED - user must select via picker",
      "gallery": "OPTIONAL",
      
      "is_active": "DEFAULT true",
      "is_featured": "DEFAULT false",
      "is_domestic": "AUTO from destination selection"
    },
    
    "itinerary": [
      {
        "day_number": "EXTRACTED",
        "title": "EXTRACTED",
        "description": "EXTRACTED",
        "route_from": "EXTRACTED from title or content",
        "route_to": "EXTRACTED from title or content",
        "route_mode": "DETECTED from keywords",
        "activities": "EXTRACTED and categorized",
        "meals": "EXTRACTED from content",
        "overnight": "EXTRACTED from content",
        "optionals": "EXTRACTED if present",
        "notes": "EXTRACTED if present"
      }
    ]
  },

